<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">My Blog</div> 
      <div class="ui top attached segment">
        <div class="ui divided items">
         <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>">
                </div>
                <div class="content">
                 <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a> 
                 <div class="meta">
                    <span><%= blog.created.toDateString() %></span> 
                 </div>
                 <div class="description">
                   <% if(blog.body && blog.body.length > 0) { %>
                <p><%- blog.body.substring(0, 100)%>...</p>
                <% } %>  
                 </div>
                 <div class="extra">
                     <a class="ui teal button" href="/blogs/<%= blog._id %>">
                         Read More
                         <i class="right chevron icon"></i>
                     </a>
                     <form method="get" action="https://www.facebook.com/marina.netrebchu">
                     <button class="ui facebook button">
                        <i class="facebook icon"></i>
                            Facebook
                        </button>
                    </form>
                 </div>
                </div>
            </div>
          <% }) %>  
        </div>
    </div>
</div>

<% include ./partials/footer %>
